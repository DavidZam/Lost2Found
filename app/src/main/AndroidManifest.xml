<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.lost2found">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".loginregisterUI.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".loginregisterUI.RegisterActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".homeUI.HomeActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_announce_section"/>

        <activity
            android:name=".chatUI.ChatActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_chat_section"/>

        <activity
            android:name=".chatUI.ChatConcrete"
            android:screenOrientation="portrait"
            />
        <!--android:label="@string/title_chatconcrete_section"-->

    </application>

</manifest>