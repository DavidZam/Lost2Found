<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/concrete_chat_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:theme="@style/Lost2FoundTheme"
    tools:context=".lost2foundUI.chatUI.chatConcreteUI.ChatConcrete">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="240dp"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/userSender"
            android:text="Nombre usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textMsg"
            android:text="texto del mensaje"
            android:background="@drawable/rounded_rectangle_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userSender"
            android:maxWidth="240dp"
            android:padding="7dp"
            android:textColor="#ffffff"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/userSender"/>

        <TextView
            android:id="@+id/hourMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textMsg"
            android:layout_alignEnd="@+id/textMsg"
            android:text="11:40"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/textMsg"
            app:layout_constraintLeft_toRightOf="@+id/textMsg" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

