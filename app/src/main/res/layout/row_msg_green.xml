<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/concrete_chat_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:theme="@style/Lost2FoundTheme"
    tools:context=".lost2foundUI.chatUI.chatConcreteUI.ChatConcrete">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/green_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/userSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/hourMsg"
            android:text="Nombre usuario"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/textMsg" />

        <TextView
            android:id="@+id/hourMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="12dp"
            android:text="11:40"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textMsg"
            android:text="Â¿Encontraste un movil hace poco no?"
            android:background="@drawable/rounded_rectangle_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userSender"
            android:layout_alignParentEnd="true"
            android:minWidth="30dp"
            android:maxWidth="240dp"
            android:padding="7dp"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

