<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/concrete_chat_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:theme="@style/Lost2FoundTheme"
    tools:context=".lost2foundUI.chatUI.chatConcreteUI.ChatConcrete">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/green_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingStart="4dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/userSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/hourMsg"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/textMsg" />

        <TextView
            android:id="@+id/hourMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textMsg"
            android:background="@drawable/rounded_rectangle_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userSender"
            android:layout_alignParentEnd="true"
            android:minWidth="30dp"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginTop="7dp"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toTopOf="parent"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

