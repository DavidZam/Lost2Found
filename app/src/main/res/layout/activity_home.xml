<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingTop="16dp"
    android:theme="@style/LoginRegisterTheme"
    tools:context="es.lost2found.homeUI.HomeActivity">

    <!--<FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:background="@color/colorBackground">


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="115dp"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:id="@+id/announce_section"
            android:text="@string/title_announce_section"
            android:textSize="20dp" />


        <Button
            android:id="@+id/create_announce_button"
            android:layout_marginTop="40dp"
            android:text="@string/create_announce_text"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_below="@id/announce_section"
            style="@style/buttonStyle"
             />
        <!-- android:onClick="register"-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:text="@string/app_name"
            android:textColor="@color/textSecondaryColor"/>

        </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_marginTop="16dp"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/navigate_menu"
        app:headerLayout="@layout/nav_header"
        />

<!--android:background="?attr/colorPrimary"-->

</android.support.v4.widget.DrawerLayout>