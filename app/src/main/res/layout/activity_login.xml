<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:theme="@style/Lost2FoundTheme"
    tools:context=".lost2foundUI.loginregisterUI.LoginActivity">
    <!---->

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_logo" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_textloginregister"
        android:inputType="textEmailAddress"
        android:paddingTop="80dp"
        android:textColor="@color/textOccasionalColor"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pass_textloginregister"
        android:inputType="textPassword"
        android:paddingTop="15dp"
        android:textSize="17sp"
        android:textColor="@color/textOccasionalColor" />

    <Button
        android:id="@+id/login_button"
        android:text="@string/login_button_text"
        android:onClick="login"
        style="@style/buttonStyle" />

    <TextView
        android:id="@+id/wrong_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingTop="16dp"
        android:textAlignment="center"
        android:textColor="@color/errorColor" />

    <TextView
        android:id="@+id/register_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/noaccount_textlogin"
        android:textAlignment="center"
        android:textColor="@color/textOccasionalColor" />

    <Button
        android:id="@+id/register_button"
        android:text="@string/register_button_text"
        android:onClick="register"
        android:layout_marginTop="15dp"
        style="@style/buttonStyle"  />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>