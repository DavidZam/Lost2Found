<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_announce"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecondaryText"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".lost2foundUI.announceUI.NewAnnounceActivity"
        tools:showIn="@layout/activity_new_announce">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolbarStyle">

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/newannounce_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar_center"
            android:orientation="vertical"
            android:padding="16dp">

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/announce_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/spinner2_placeholder"
                android:textColorHint="@color/colorPrimaryText"
                app:met_floatingLabel="normal" />

            <Button
                android:id="@+id/date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/announce_type"
                android:layout_marginEnd="96dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:calendarViewShown="true"
                android:datePickerMode="spinner"
                android:onClick="showDatePickerDialog"
                android:text="@string/date_announce_text"
                android:textAllCaps="false"
                android:textColor="@color/colorSecondaryText"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/date_show"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/date_button"
                android:layout_marginStart="-96dp"
                android:layout_toEndOf="@+id/date_button"
                android:textAlignment="center" />

            <Button
                android:id="@+id/hour_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/date_button"
                android:layout_toStartOf="@+id/hour_show"
                android:background="@color/colorPrimary"
                android:calendarViewShown="true"
                android:onClick="showTimePickerDialog"
                android:text="@string/hour_announce_text"
                android:textAllCaps="false"
                android:textColor="@color/colorSecondaryText"
                android:textSize="16sp"
                android:timePickerMode="spinner" />

            <EditText
                android:id="@+id/hour_show"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/date_button"
                android:layout_alignEnd="@+id/listCategories"
                android:textAlignment="center" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/listCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/hour_button"
                android:layout_marginTop="8dp"
                android:hint="@string/spinner_placeholder"
                android:textColorHint="@color/colorPrimaryText"
                app:met_floatingLabel="normal" />

            <EditText
                android:id="@+id/marca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_below="@id/listCategories"
                android:hint="@string/brand_text"
                android:inputType="text"
                android:textColor="@color/colorPrimaryText"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_below="@id/marca"
                android:hint="@string/model_text"
                android:inputType="text"
                android:textColor="@color/colorPrimaryText"
                android:textSize="17sp" />

            <!--<com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/colorSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/model"
                android:hint="@string/spinner3_placeholder"
                android:textColorHint="@color/colorPrimaryText"
                app:met_floatingLabel="normal" />-->

            <Button
                android:id="@+id/color_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/announce_type"
                android:layout_below="@+id/model"
                android:layout_marginTop="-5sp"
                android:background="@color/colorPrimary"
                android:onClick="showColorPickerDialog"
                android:text="Color"
                android:textAllCaps="false"
                android:textColor="@color/colorSecondaryText"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/color_show"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/color_button"
                android:layout_alignParentStart="true"
                android:layout_marginStart="114dp"
                android:inputType="number"
                android:textAlignment="center" />

            <Button
                android:id="@+id/place_button"
                style="@style/buttonStyle"
                android:layout_below="@id/color_show"
                android:layout_marginTop="15dp"
                android:onClick="place"
                android:text="@string/place_button_text" />

            <!--<Button
                android:id="@+id/upload_image"
                style="@style/buttonStyle"
                android:layout_below="@id/place_button"
                android:layout_marginTop="15dp"
                android:text="@string/image_upload_text" />
                android:onClick="place"-->

            <Button
                android:id="@+id/register_button"
                style="@style/buttonStyle"
                android:layout_below="@id/place_button"
                android:layout_marginTop="35dp"
                android:onClick="createAnnounce"
                android:text="@string/announce_button_text" />

        </RelativeLayout>

    </RelativeLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

</android.support.constraint.ConstraintLayout>