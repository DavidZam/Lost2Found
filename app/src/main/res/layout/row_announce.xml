<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_margin="4sp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10sp"
            android:src="@drawable/ic_phone_android" />

        <TextView
            android:id="@+id/announceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/categorieAnnounce"
            android:layout_below="@+id/imageView"
            android:text="Perdida"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/announceDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/announceType"
            android:layout_marginStart="180dp"
            android:text="17/04/18"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/announceHourText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/announceDateText"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/announceDateText"
            android:text="20:50"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/categorieAnnounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="73dp"
            android:text="Tarjeta transporte"
            android:textSize="22sp"
            android:textStyle="bold" />

        <es.lost2found.lost2foundUI.pickerUI.ColorView
            android:id="@+id/color_view"
            android:layout_width="32dp"
            android:layout_height="29dp"
            android:layout_alignEnd="@+id/announceOwner"
            android:layout_alignTop="@+id/categorieAnnounce"
            android:background="@color/Red" />

        <TextView
            android:id="@+id/announceOwner"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/announceType"
            android:layout_centerVertical="true"
            android:text="Random"
            android:textSize="19sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>