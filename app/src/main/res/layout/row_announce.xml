<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_margin="4sp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10sp"
            android:src="@drawable/ic_phone_android" />

        <TextView
            android:id="@+id/announceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Perdida"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/announceDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/announceType"
            android:layout_marginStart="180dp"
            android:layout_marginTop="7dp"
            android:text="17/04/18"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/announceHourText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="7dp"
            android:text="20:50"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/categorieAnnounce"
            android:layout_marginStart="260dp"
            android:text="18:46"
            android:textSize="14sp" />

        <!--<TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/announceType"
            android:layout_marginTop="10sp"
            android:layout_marginStart="45sp"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/model"
            android:text="Apple" />-->

        <TextView
            android:id="@+id/categorieAnnounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/announceType"
            android:layout_below="@+id/announceType"
            android:layout_marginTop="15sp"
            android:text="Telefono"
            android:textSize="18sp" />

        <!--<TextView
            android:id="@+id/model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/announceType"
            android:layout_below="@+id/announceType"
            android:layout_marginTop="14dp"
            android:text="iPhone X"
            android:textSize="18sp" />-->

        <!--<TextView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/announceType"
            android:layout_toEndOf="@+id/brand"
            android:layout_marginStart="25sp"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:text="Plateado" />-->

    </RelativeLayout>

</android.support.v7.widget.CardView>