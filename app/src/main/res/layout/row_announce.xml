<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_margin="4sp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!--
            private TextView announceType;
    private TextView announceDateText;
    private TextView currentTime;
    private TextView announceHourText;
    private TextView announceCategorie;
    private TextView brand;
    private TextView model;
    private TextView color;
        -->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10sp"
            android:src="@drawable/ic_phone_android" />

        <TextView
            android:id="@+id/announceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:text="Perdida"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/announceDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/announceType"
            android:layout_marginTop="10sp"
            android:layout_marginStart="30sp"
            android:textSize="15sp"
            android:text="17/04/18" />

        <TextView
            android:id="@+id/announceHourText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/announceDateText"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:layout_marginStart="15sp"
            android:text="20:50" />

        <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/announceType"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Apple" />

        <TextView
            android:id="@+id/model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/announceType"
            android:layout_toEndOf="@+id/brand"
            android:layout_marginStart="15sp"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:text="iPhone X" />

        <TextView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/announceType"
            android:layout_toEndOf="@+id/model"
            android:layout_marginStart="15sp"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:text="Plateado" />

    </RelativeLayout>

</android.support.v7.widget.CardView>