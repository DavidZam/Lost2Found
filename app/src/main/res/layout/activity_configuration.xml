<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingTop="16dp"
    android:theme="@style/Lost2FoundTheme"
    tools:context=".lost2foundUI.otherUI.ConfigurationActivity">

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".lost2foundUI.otherUI.ConfigurationActivity"
        tools:showIn="@layout/activity_abouts_us"
        android:background="@color/colorSecondaryText">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_centerHorizontal="true"
            android:theme="@style/ToolbarStyle" />

        <Button
            android:id="@+id/cambiarEmail"
            style="@style/buttonStyle"
            android:layout_width="250dp"
            android:layout_marginLeft="55dp"
            android:layout_above="@+id/cambiarPass"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="54dp"
            android:text="Cambiar email" />

        <Button
            android:id="@+id/cambiarNombre"
            style="@style/buttonStyle"
            android:layout_width="250dp"
            android:layout_marginLeft="55dp"
            android:layout_above="@+id/cambiarEmail"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="54dp"
            android:text="Cambiar nombre" />

        <Button
            android:id="@+id/cambiarPass"
            style="@style/buttonStyle"
            android:layout_width="250dp"
            android:layout_marginLeft="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="54dp"
            android:text="Cambiar contraseña"

            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_above="@+id/cambiarNombre"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Puedes cambiar en cualquier momento tu nombre, tu email y tu contraseña."
            android:textSize="18sp" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigate_menu" />

</android.support.v4.widget.DrawerLayout>